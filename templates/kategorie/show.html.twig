{% extends 'base.html.twig' %}

{% block title %}Kategorie{% endblock %}

{% block body %}
    <br><br>
    <div class="container">
        <h2>Kategorie</h2>
        <br>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kategorie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ kategorie.name }}</td>
            </tr>
            <tr>
                <th>Hide</th>
                <td>{{ kategorie.hide ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ kategorie.deleted ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_kategorie_index') }}">back to list</a>

        <a href="{{ path('app_kategorie_edit', {'id': kategorie.id}) }}">edit</a>

        {{ include('kategorie/_delete_form.html.twig') }}
    </div>

{% endblock %}
