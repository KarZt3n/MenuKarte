{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ news.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ news.slug }}</td>
            </tr>
            <tr>
                <th>Teaser</th>
                <td>{{ news.teaser }}</td>
            </tr>
            <tr>
                <th>Bodytext</th>
                <td>{{ news.bodytext }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ news.createAt ? news.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifyAt</th>
                <td>{{ news.modifyAt ? news.modifyAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hide</th>
                <td>{{ news.hide ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ news.deleted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsEvent</th>
                <td>{{ news.isEvent ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DailyEvent</th>
                <td>{{ news.dailyEvent ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EventStart</th>
                <td>{{ news.eventStart ? news.eventStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EventEnde</th>
                <td>{{ news.eventEnde ? news.eventEnde|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Bild</th>
                <td>{{ news.bild }}</td>
            </tr>
            <tr>
                <th>Bilder</th>
                <td>{{ news.bilder ? news.bilder|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_news_index') }}">back to list</a>

    <a href="{{ path('app_news_edit', {'id': news.id}) }}">edit</a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}
