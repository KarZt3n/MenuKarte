{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('erfolg') %}
        <div class="alert alert-success">
            <h3>{{ message }}</h3>
        </div>
    {% endfor %}

    <br><br>
    <div class="container">
        <h2>Gerichte bearbeiten</h2>
        <br>
        <table class="table table-striped">
            <thead>
            <tr>
{#                <td>Bestell Nr.</td>#}
                <td>Name</td>
                <td>Kategorie</td>
                <td>Beschreibung</td>
                <td>Preis</td>
                <td><a href="{{ path('gericht.anlegen') }}">Artikel Anlegen</a></td>
            </tr>
            </thead>
            <tbody>
            {% for gericht in gerichte %}
                <tr>
{#                    <td>{{ gericht.id }}</td>#}
                    <td><a href="{{ path('gericht.anzeigen', {id: gericht.id}) }}">{{ gericht.name }}</a></td>
                    <td>{{ gericht.kategorie }}</td>
                    <td>{{ gericht.beschreibung|raw }}</td>
                    <td>{{ gericht.preis|number_format(2, '.', ',') }} EUR</td>
                    <td>
                        <a href="{{ path('gericht.edit', {'id': gericht.id}) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a href="{{ path('gericht.entfernen', {id: gericht.id}) }}"><i class='fa fa-trash'></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
